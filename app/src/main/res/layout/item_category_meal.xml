<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:layout_margin="15dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp">

    <LinearLayout
        android:id="@+id/ll_item_catemeal_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/iv_item_catemeal_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/tv_item_catemeal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/black_30"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="名称"
                android:textColor="@color/white"
                android:textSize="18dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_catemeal_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="left"
                android:text="名称"
                android:drawableLeft="@mipmap/time"
                android:drawablePadding="10dp"
                android:textColor="@color/col_text1"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_item_catemeal_hard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="10dp"
                android:drawableLeft="@mipmap/hard"
                android:text="名称"
                android:drawablePadding="10dp"
                android:textColor="@color/col_text1"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_item_catemeal_collect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/collect_nomal"
                android:text="名称"
                android:textColor="@color/col_text1"
                android:textSize="14dp" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
